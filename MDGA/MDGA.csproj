  <!-- Deploy target: copy merged MDGA.dll/pdb and Info.json to game Mods folder, remove other output files -->
  <Target Name="Deploy" AfterTargets="ILRepack">
    <PropertyGroup>
      <!-- Use WrathPath property defined earlier as game root; change if needed -->
      <DeployDir>$(WrathPath)\Mods\MDGA\</DeployDir>
    </PropertyGroup>

    <ItemGroup>
      <Files Include="$(OutputPath)**\*.*" />
      <!-- remove extra dlls/pdbs so only the merged MDGA.dll stays -->
      <Files Remove="$(OutputPath)**\*.dll" />
      <Files Remove="$(OutputPath)**\*.pdb" />
      <!-- explicitly include the merged assembly and pdb and Info.json -->
      <Files Include="$(OutputPath)MDGA.dll" />
      <Files Include="$(OutputPath)MDGA.pdb" />
      <Files Include="$(MSBuildProjectDirectory)\Info.json" />

      <ToDelete Include="$(OutputPath)**\*.*" />
      <ToDelete Remove="@(Files)" />
    </ItemGroup>

    <MakeDir Directories="$(DeployDir)" />
    <Copy SourceFiles="@(Files)" DestinationFiles="@(Files->'$(DeployDir)%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    <Delete Files="@(ToDelete)" />
  </Target>
