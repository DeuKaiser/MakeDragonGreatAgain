  <!-- Publicizer configuration -->
  <PropertyGroup>
    <!-- 修改为你的游戏安装目录根路径 -->
    <WrathPath>E:\SteamLibrary\steamapps\common\Pathfinder Second Adventure</WrathPath>
    <!-- 输出到项目目录下 lib 文件夹，比 $(SolutionDir) 更稳 -->
    <PublicizeOutputDir>$(MSBuildProjectDirectory)\lib\</PublicizeOutputDir>
  </PropertyGroup>

  <!-- Publicize Target -->
  <Target Name="Publicize" AfterTargets="Clean">
    <ItemGroup>
      <!-- Use $(KingmakerPath) for Kingmaker, 这里是 Wrath -->
      <Assemblies Include="$(WrathPath)\Wrath_Data\Managed\Assembly-CSharp.dll" />
      <PublicAssembly Include="$(SolutionDir)lib\Assembly-CSharp_public.dll" />
      <RenamedAssembly Include="$(SolutionDir)lib\Assembly-CSharp.dll" />
    </ItemGroup>

    <RemoveDir Directories="$(SolutionDir)lib/" />
    <PublicizeTask InputAssemblies="@(Assemblies)" OutputDir="$(SolutionDir)lib/" />
    <Move SourceFiles="@(PublicAssembly)" DestinationFiles="@(RenamedAssembly)" />
  </Target>

  <!-- DLL Merging -->
  <Target Name="ILRepack" AfterTargets="Build">
    <PropertyGroup>
      <ILRepackTempDir>$(OutputPath)_ilrepack</ILRepackTempDir>
    </PropertyGroup>

    <!-- Prepare temp folder -->
    <MakeDir Directories="$(ILRepackTempDir)" />

    <!-- Copy ALL game Managed DLLs to temp so ILRepack can resolve references without locking output files -->
    <ItemGroup>
      <RepackLibs Include="$(WrathPath)\Wrath_Data\Managed\*.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(RepackLibs)" DestinationFolder="$(ILRepackTempDir)" SkipUnchangedFiles="true" />

    <!-- Copy our build outputs needed for merge into temp -->
    <ItemGroup>
      <MergeInputs Include="$(OutputPath)MDGA.dll" />
      <MergeInputs Include="$(OutputPath)BlueprintCore.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(MergeInputs)" DestinationFolder="$(ILRepackTempDir)" SkipUnchangedFiles="true" />

    <ItemGroup>
      <InputAssemblies Include="MDGA.dll" />
      <InputAssemblies Include="BlueprintCore.dll" />
    </ItemGroup>

    <Message Text="Merging: @(InputAssemblies) into MDGA.dll" Importance="High" />

    <!-- Run ILRepack in temp directory, write output to real OutputPath -->
    <ILRepack OutputType="Dll" MainAssembly="MDGA.dll" OutputAssembly="$(OutputPath)MDGA.dll" InputAssemblies="@(InputAssemblies)" WorkingDirectory="$(ILRepackTempDir)" />

    <!-- Clean up temp folder -->
    <RemoveDir Directories="$(ILRepackTempDir)" />
  </Target>

